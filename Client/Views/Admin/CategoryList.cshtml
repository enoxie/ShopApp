@model CategoryListViewModel


<div class="row">
    <div class="col-md-9">
        <h1>Admin Categories</h1>
        <hr>

        @if (Model.Categories.Count() > 0)
        {
            <table class="table table-bordered table-responsive align-middle">
                <thead>
                    <tr class="text-center">
                        <td>Category ID</td>
                        <td>Category Name</td>
                        <td>Category URL</td>
                        <td>Category Description</td>
                        <td style="width:150px;">Actions</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr class="text-center">


                            <td>@category.CategoryId</td>
                            <td>@category.Name</td>
                            <td>localhost:5000/products/@category.Url</td>
                            <td>
                                <textarea class="form-control">@category.Description</textarea>

                            </td>
                            <td>
                                <a href="/admin/categories/@category.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/admin/deletecategory" class="d-inline" method="POST">
                                    <input type="hidden" name="CategoryId" value="@category.CategoryId">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }

        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        Kategori bulunamadÄ±!
                    </div>
                </div>
            </div>
        }

    </div>
</div>