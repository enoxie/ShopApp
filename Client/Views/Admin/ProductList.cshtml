@model ProductListViewModel


<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr>
        <a href="/admin/product/create" class="btn btn-primary btn-sm mb-3">Add Product</a>
        <table class="table table-bordered table-responsive align-middle">
            <thead>
                <tr class="text-center">
                    <td>Product ID</td>
                    <td>Product Image</td>
                    <td>Product Name</td>
                    <td>Product Price</td>
                    <td>Product Homepage</td>
                    <td>Product Verified</td>
                    <td style="width:150px;">Actions</td>
                </tr>
            </thead>

            <tbody>

                @if (Model.Products.Count() > 0)
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr class="text-center">
                            <td>@product.ProductId</td>
                            <td><img src="~/images/@product.ImageUrl" width="40" height="40"></td>
                            <td>@product.Name</td>
                            <td>â‚º@product.Price</td>
                            <td>
                                @if (product.IsHome)
                                {
                                    <i class="fa-solid fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-x"></i>
                                }
                            </td>
<td>
                                @if (product.IsApproved)
                                {
                                    <i class="fa-solid fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-x"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@product.ProductId" class="btn btn-primary btn-sm me-2">Edit</a>
                                    <form action="/admin/deleteproduct" class="d-inline" method="POST"> 
                                    <input type="hidden" name="ProductId" value="@product.ProductId">
                                     <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                                    </form>
                             
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-danger">
                        <h3>No Products</h3>
                    </div>
                }

            </tbody>

        </table>
    </div>
</div>