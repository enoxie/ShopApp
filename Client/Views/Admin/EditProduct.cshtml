@model ProductModel
<h1 class="h3">Edit Product</h1>
<hr>
   <form asp-controller="admin" asp-action="EditProduct" method="POST">
<div class="row">
    <div class="col-md-4">
     
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Name">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Url" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Url">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label"></label>
                <textarea class="form-control" asp-for="@Model.Description"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label"></label>
                <input class="form-control" asp-for="@Model.ImageUrl">
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label"></label>
                <input class="form-control" asp-for="@Model.Price">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Product</button>
            </div>
      
    </div>
    <div class="col-md-4">
        @foreach (var item in (List<Category>)ViewBag.Categories){
            
           <div class="form-check form-switch">
           <input class="form-check-input" type="checkbox" 
           role="switch"
           name="categoryId"
           value="@item.CategoryId" 
           id="category_@(item.CategoryId)" @(Model.SelectedCategories.Any(i=>i.CategoryId==item.CategoryId) ? "checked" : "")>
           <label class="form-check-label" for="category_@(item.CategoryId)">@item.Name</label>
           </div>
        }
    </div>
    </div>
  </form>