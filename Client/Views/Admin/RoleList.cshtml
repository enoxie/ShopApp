@model IEnumerable<IdentityRole>


<div class="row">
    <div class="col-md-12">
        <h1>Role List</h1>
        <hr>
        <a href="/admin/role/create" class="btn btn-primary btn-sm mb-3">Create Role</a>
        <table class="table table-bordered table-responsive align-middle">
            <thead>
                <tr class="text-center">
                    <td>Role ID</td>
                    <td>Role Name</td>
                    <td style="width:150px;">Actions</td>
                </tr>
            </thead>

            <tbody>

                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Name</td>

                            <td>
                                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                                <form action="/admin/role/delete" class="d-inline" method="POST">
                                    <input type="hidden" name="RoleId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-danger">
                        <h3>No Roles</h3>
                    </div>
                }

            </tbody>

        </table>
    </div>
</div>